mixin breadcrumb(props)
  .page-header
    .page-block
      .row.align-items-center
        .col-md-12
          .page-header-title
            h5.m-b-10.text-capitalize= props.title
          ul.breadcrumb
            li.breadcrumb-item
              a(href='/')
                i.feather.icon-home
            li.breadcrumb-item
              a(href='').text-capitalize= props.title
  
