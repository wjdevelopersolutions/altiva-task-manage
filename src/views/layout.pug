include ./mixins/loader
include ./mixins/navbar
include ./mixins/top-header
include ./mixins/bottom-header
include ./mixins/breadcrumb

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui")

    link(rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png")
    link(rel="manifest" href="/images/favicon/site.webmanifest")

    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="/css/app.css")

    title altiva | #{props.title}
  body(class="")

    //- [ Pre-loader ] start
    +loader
    //- [ navigation menu ] start
    +navbar(props.proyectos)
    //- [ Header ] start
    header(class="navbar pcoded-header navbar-expand-lg navbar-light header-blue")
      +topHeader
      +bottomHeader
    //- [ Main Content ] start
    .pcoded-main-container
      .pcoded-content
        //- [ breadcrumb ] start 
        +breadcrumb(props)
        //- [ Main Content ] start
        .row
          .col-sm-12
            .card
              .card-header
                block body


  script(src="/js/libs/vendor-all.min.js")
  script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js")
  script(src="/js/libs/pcoded.min.js")
  script(src="/dist/bundle.js")