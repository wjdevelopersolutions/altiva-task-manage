extends ./layout

include ./mixins/formulario

block body

  .container
    if (props.errors)
      each error in props.errors
        .row
          .col-md-12
            .alert.alert-danger.alert-dismissible.fade.show
              strong.text-capitalize #{error.param}: &nbsp;
              span= error.msg
              button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                span(aria-hidden="true") ×
    .row
      .col-md-12
        .alert.alert-secondary.alert.dismissible.fade.show(role="alert")
          button(type="button" class="close" data-dismiss="alert" arial-label="close")
            span(aria-hidden="true") ×
          h5.text-capitalize.mb-3 Frase del dia
          blockquote.blockquote
            p.mb-2 Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.
            footer.blockquote-footer Someone famous in
              cite(title="Source Title") Source Title
    .row
      .col-md-12
        h5.text-capitalize.mb-3= props.title  
      .col-sm-12
        +formulario(props.proyecto)
        
